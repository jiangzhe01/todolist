{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "eol-last": 0,  // 文件以单一的换行符结束
      "no-extra-semi": 0, // 可以多余的冒号
      "semi": 0,  // 语句可以不需要分号结尾
      "eqeqeq": 0, // 必须使用全等
      "one-var": 0, // 连续声明
      "no-undef": 0, // 可以 有未定义的变量
      "indent": 2,
      "no-tabs": "off"
    }
}
